@model IEnumerable<demofaq.Models.FAQS>

@{
    ViewBag.Title = "Index";
    ViewBag.customCss = "<link href='" + Url.Content("~/Content/homepage.css") + "' rel='stylesheet' type='text/css' />";
}
<div class="page-wrapper">
    <section class="questions" id="ask">
        @Html.Action("CreatePartial", "FAQS")
    </section>
    <section class="questions" id="answer">
        @*@foreach (var item in Model)
        {
            <div><b>@Html.DisplayNameFor(modelItem => modelItem.Question): </b></div>
            <div>@item.Question</div>
            <div><strong>@Html.DisplayNameFor(modelItem => modelItem.Answer): </strong></div>
            <div>@item.Answer</div>
            <hr />
        }*@
    </section>
    <script type="text/javascript">
        loadQuestions();
        window.setInterval("loadQuestions()", 1000);
        function loadQuestions() {
            $.ajax({
                url: "@Url.Action("Answers", "FAQS")",
                type: "GET",
                dataType: "html",
                success: function (result) {
                    $("#answer").html(result);
                }
            });
        }
    </script>
</div>